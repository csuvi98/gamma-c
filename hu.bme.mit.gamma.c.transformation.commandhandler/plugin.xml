<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension point="org.eclipse.ui.commands">
    <command id="hu.bme.mit.gamma.c" name="Generate Command"/>
  </extension>
  <extension point="org.eclipse.ui.menus">
    <menuContribution allPopups="false" locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu">
        <menu id="gammaProjectMenu"
             label="Gamma Commands">
		    <command commandId="hu.bme.mit.gamma.c" label="Start C Transformation" style="push">
           	<visibleWhen checkEnabled="false">
              <iterate ifEmpty="false" operator="or">
                 <test property="org.eclipse.core.resources.name" value="*.gcd">
                 </test>
              </iterate>
           	</visibleWhen>
          </command>
       </menu>
    </menuContribution>
    <menuContribution allPopups="false" locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
    <menu id="gammaPackageMenu"
             label="Gamma Commands">
		    <command commandId="hu.bme.mit.gamma.c" label="Start C Transformation" style="push">
           	<visibleWhen checkEnabled="false">
              <iterate ifEmpty="false" operator="or">
                 <test property="org.eclipse.core.resources.name" value="*.gcd">
                 </test>
              </iterate>
           	</visibleWhen>
          </command>
       </menu>
    </menuContribution>
  </extension>
  <extension point="org.eclipse.ui.handlers"> 
  	<handler class="hu.bme.mit.gamma.c.transformation.commandhandler.CommandHandler" commandId="hu.bme.mit.gamma.c"/>
  </extension>
</plugin>
